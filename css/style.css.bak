header {
  background-color: #00274C;
  padding: 20px;
  display: flex;
  flex-direction: column;
  align-items: center;
  text-align: center;
}

/* Logo样式 */
header img {
  width: 60px;
  margin-bottom: 10px;
}

/* 跳过内容链接 */
header .skip {
  position: absolute;
  top: -40px;
  left: -40px;
}

header .skip:focus {
  position: static;
  margin-bottom: 10px;
}

/* 导航栏样式 */
nav {
  margin-top: 10px;
}

nav ul {
  list-style: none;
  padding: 0;
  display: flex;
  justify-content: center;
  gap: 20px; /* 导航项之间的间距 */
}

nav ul li {
  display: inline;
}

nav ul li a {
  text-decoration: none;
  color: #FFCB05; /* 黄色文字 */
  font-weight: bold;
  font-size: 16px;
}

nav ul li a:hover {
  text-decoration: underline;
}

/* 标题样式 */
header h1 {
  margin-top: 20px;
  font-size: 24px;
  color: #FFFFFF; /* 白色标题文字 */
}

img {
     size: 50%;
}


